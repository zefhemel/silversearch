{
    "tasks": {
        "build": "npm run build -- && deno run -A ./scripts/updateVersion.ts && deno check -c deno.json && deno run -A https://github.com/silverbulletmd/silverbullet/releases/download/edge/plug-compile.js --info -c deno.json silversearch.plug.yaml"
    },
    "imports": {
        "minisearch": "npm:minisearch@7.1.2",
        "search-query-parser": "npm:search-query-parser@1.6.0",
        "md-link-extractor": "npm:md-link-extractor@1.1.1",
        "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
        "@silverbulletmd/silverbullet/": "jsr:@silverbulletmd/silverbullet@^2.0.0-pre/",
        "@silverbulletmd/silverbullet/syscalls": "jsr:@silverbulletmd/silverbullet@^2.0.0-pre/syscalls",
        "@silverbulletmd/silverbullet/type": "jsr:@silverbulletmd/silverbullet@^2.0.0-pre/type",
        "@silverbulletmd/silverbullet/lib": "jsr:@silverbulletmd/silverbullet@^2.0.0-pre/lib"
    },
    "exclude": ["modal/", "vite.config.ts"],
    "compilerOptions": {
        "lib": ["es2021", "dom"]
    },
    "nodeModulesDir": "none"
}